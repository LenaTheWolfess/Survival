    <Category>Stables</Category>
  </BuildRestrictions>
  <GarrisonHolder>
    <Train> 
      <TrainList datatype="tokens">Cavalry</TrainList>
    </Train>
    <List datatype="tokens">Cavalry Infantry Citizen+Male</List>
  </GarrisonHolder>
  <Identity>
    <GenericName>Stables</GenericName>
