		<Javelin>
			<GenericName>Cavalry Javelinists</GenericName>
			<Icon>technologies/javelin_thong.png</Icon>
			<Tooltip>Choose among cavalry javelinists</Tooltip>
			<Entities datatype="tokens">
			  units/{civ}_cavalry_javelinist_b
			  units/{civ}_cavalry_javelinist_a
			  units/{civ}_cavalry_javelinist_e
			</Entities>
		</Javelin>
		<Archer>
			<GenericName>Cavalry Archers</GenericName>
			<Icon>technologies/archery_tradition.png</Icon>
			<Tooltip>Choose among cavalry arhcers</Tooltip>
			<Entities datatype="tokens">
			  units/{civ}_cavalry_archer_b
			  units/{civ}_cavalry_archer_a
			  units/{civ}_cavalry_archer_e
			</Entities>
		</Archer>
	</Groups>
  </ProductionQueue>
