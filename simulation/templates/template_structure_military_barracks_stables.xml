			  units/{civ}_cavalry_swordsman_b
			  units/{civ}_cavalry_swordsman_a
			  units/{civ}_cavalry_swordsman_e
			</Entities>
		</Sword>
		<Spear>
			<GenericName>Cavalry spearmen</GenericName>
			<Icon>technologies/spear_cavalry.png</Icon>
			<Tooltip>Choose among cavalry spearmen</Tooltip>
			<Entities datatype="tokens">
			  units/{civ}_cavalry_spearman_b
			  units/{civ}_cavalry_spearman_a
			  units/{civ}_cavalry_spearman_e
			</Entities>
		</Spear>
		<Axe>
			<GenericName>Cavalry Axemen</GenericName>
			<Icon>technologies/battle_axe.png</Icon>
			<Tooltip>Choose among cavalry axemen</Tooltip>
			<Entities datatype="tokens">
			  units/{civ}_cavalry_axeman_b
			  units/{civ}_cavalry_axeman_a
			  units/{civ}_cavalry_axeman_e
			</Entities>
